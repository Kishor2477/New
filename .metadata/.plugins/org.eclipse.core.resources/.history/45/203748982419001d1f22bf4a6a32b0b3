package pages.selenium;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindAll;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.FindBys;
import org.openqa.selenium.support.How;
import org.openqa.selenium.support.PageFactory;
import org.openqa.selenium.support.events.EventFiringWebDriver;

import com.aventstack.extentreports.ExtentTest;
import lib.selenium.PreAndPost;

public class CreateNewProblem extends PreAndPost{
	
	public CreateNewProblem(EventFiringWebDriver driver, ExtentTest test) {	
		this.driver = driver;
		this.test = test;
		driver.switchTo().defaultContent();
		driver.switchTo().frame("gsft_main");
		PageFactory.initElements(driver,this);
	}
	 
	@FindBy(id="sys_readonly.problem.number") 
	private WebElement eleProblemNumber;	
	
	
	@FindBy(how=How.ID,using="problem.short_description")
	private WebElement eleShortDescription;

	
	public CreateNewProblem getProblemNumber() {	
		problemNumber = getAttribute(eleProblemNumber,"value");
		System.out.println(incidentNumber);
		return this;
	}	

	
	public CreateNewProblem typeShortDescription(String data) {
		type(eleShortDescription, data);
		return this;		
	}
	
	public CreateNewProblem typeNewShortDescription(String data) {
		type(eleShortDescription, data);
		return this;		
	}

	
	public CreateNewProblem clickSubmit() {
		WebElement eleSubmit = locateElement("sysverb_insert");
		click(eleSubmit);
		return this;		
	}
	
}
